@using EntityLayer.Concrete
@model List<SubAbout>

<section class="w3l-content-6 py-5">
    <div class="container py-lg-5">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 content-6-left pr-lg-5">
                    <h6 class="sub-title">Neden Bizi Seçmelisiniz</h6>
                    <h3 class="hny-title">Hayat, konfor alanınızın sonunda başlar.</h3>
                </div>
                <div class="col-lg-6 content-6-right mt-lg-0 mt-4">
                    <p class="mb-3">
                       @item.Description
                    </p>
                    <a href="#" class="btn btn-style btn-primary mt-4">Daha fazlası</a>
                </div>
            }
        </div>
    </div>
</section>