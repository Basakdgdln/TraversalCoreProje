@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "MyOldReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    string mail = "@traversal.com";
}



<div class="container-fluid">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('/soft-ui-dashboard/assets/img/curved-images/curved0.jpg'); background-position-y: 50%;">
        <span class="mask bg-gradient-primary opacity-6"></span>
    </div>
    <div class="card card-body blur shadow-blur mx-4 mt-n6 overflow-hidden">
        <div class="row gx-4">
            @if (ViewBag.count > 0)
            {
                <div class="container-fluid py-4">
                    <div class="row">
                        <div class="col-12">
                            <h6>Aktif Rezervasyonlar</h6>
                            <p class="card-text px-0 pt-0 pb-2">
                                Web sitemiz Traversal üzerinden yapmış olduğunuz
                                aktif rezervasyon listenize asağıdan erişebilirsiniz.
                            </p>
                            <br />
                            <div class="card-body px-0 pt-0 pb-">
                                <div class="table-responsive p-0">
                                    <table class="table align-items-center mb-0">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rehber</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Rota</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Seyahat Tarihi</th>
                                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Kişi Sayısı</th>
                                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Durum</th>
                                                <th class="text-secondary opacity-7"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var x in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex px-2 py-1">
                                                            <div>
                                                                <img src="@x.Guide.Image" class="avatar avatar-sm me-3" alt="user1">
                                                            </div>
                                                            <div class="d-flex flex-column justify-content-center">
                                                                <h6 class="mb-0 text-sm">@x.Guide.Name</h6>
                                                                <p class="text-xs text-secondary mb-0">@x.Guide.Name.@mail</p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <p class="text-xs font-weight-bold mb-0">@x.Destination.City</p>
                                                    </td>
                                                    <td class="align-middle">
                                                        <span class="text-secondary text-xs font-weight-bold">@x.ReservationDate</span>
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        <span class="text-secondary text-xs font-weight-bold">@x.PersonCount</span>
                                                    </td>
                                                    <td class="align-middle text-center text-sm">
                                                        <span class="badge badge-sm bg-gradient-success">@x.Status</span>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            else
            {
                <div class="container-fluid py-4 text-center">
                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-danger">Tarafınıza ait geçmiş seyahat bilgisi bulunamamaktadır.</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


