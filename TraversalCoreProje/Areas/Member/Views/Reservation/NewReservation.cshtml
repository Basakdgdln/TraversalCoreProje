@model EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yeni Rezervasyon Sayfası</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">
                        Web sitemiz Traversal üzerinde yer alan lokasyonlar içinde yeni bir rezervasyonu aşağıdaki panelden yapabilirsiniz.
                    </p>
                    <form method="post" class="form-group">
                        @Html.Label("Lokasyon")
                        <select class="form-control" asp-for="DestinationID" asp-items="@ViewBag.v"></select>

                        @Html.Label("Kişi Sayısı")
                        <input type="text" asp-for="PersonCount" class="form-control" />

                        @Html.Label("Tarih")
                        <input type="date" asp-for="ReservationDate" class="form-control" />
                        <br />

                        <textarea class="form-control" rows="4" cols="10" asp-for="Description" placeholder="Varsa eklemek istedikleriniz..."></textarea>
                        <br />
                        <button class="btn btn-outline-primary" style="float:right" onclick="alert('Rezervasyonunuz başlangıçta onay bekliyor şeklinde alınacaktır.Rezervasyon onaylanma süreci için Güncel Rezervasyonlarım menüsünü takip etmeyi unutmayın');">Rezervasyon Yap</button>
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



