@model CreateDestinationCommand
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post" class="form-group">
    <input type="text" asp-for="City" class="form-control" placeholder="Rota bilgisi giriniz..." />
    <br />
    <input type="text" asp-for="DayNight" class="form-control" placeholder="Süre bilgisi giriniz (kaç gün - kaç gece )" />
    <br />
    <input type="text" asp-for="Price" class="form-control" placeholder="Fiyat değerini giriniz..." />
    <br />
    <input type="text" asp-for="Capacity" class="form-control" placeholder="Kapasite değerini giriniz..." />
    <br />
    <button class="btn btn-primary" style="float:right" onclick="alert('Yeni tur rotası başarılı bir şekilde oluşturuldu');">Yeni Rota Oluştur</button>
    <br />
</form>



