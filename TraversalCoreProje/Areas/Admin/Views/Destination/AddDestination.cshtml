@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0"></h5>
            <small class="text-muted float-end"></small>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Seyahat Rotası</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="City" id="basic-default-name" placeholder="Rota bilgisi giriniz..." />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-company">Süre (Gün / Gece)</label>
                    <div class="col-sm-10">
                        <input type="text"
                               class="form-control"
                               asp-for="DayNight"
                               id="basic-default-company"
                               placeholder="Süre bilgisi giriniz (kaç gün - kaç gece )" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-email">Fiyat</label>
                    <div class="col-sm-10">
                        <div class="input-group input-group-merge">
                            <input type="text"
                                   id="basic-default-email"
                                   class="form-control"
                                   placeholder="Fiyat değerini giriniz..."
                                   asp-for="Price"
                                   aria-label="john.doe"
                                   aria-describedby="basic-default-email2" />
                            <span class="input-group-text" id="basic-default-email2"></span>
                        </div>
                        <div class="form-text">Fiyat bilgisini $ bazında giriniz.</div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-email">Kontenjan</label>
                    <div class="col-sm-10">
                        <div class="input-group input-group-merge">
                            <input type="text"
                                   id="basic-default-email"
                                   class="form-control"
                                   placeholder="Kapasite değerini giriniz..."
                                   asp-for="Capacity"
                                   aria-label="john.doe"
                                   aria-describedby="basic-default-email2" />
                            <span class="input-group-text" id="basic-default-email2"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-phone">Tarih</label>
                    <div class="col-sm-10">
                        <input type="date"
                               id="basic-default-phone"
                               class="form-control phone-mask"
                               asp-for="Date"
                               aria-label="658 799 8941"
                               aria-describedby="basic-default-phone" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-message">Görsel</label>
                    <div class="col-sm-10">
                        <input type="text"
                               id="basic-default-phone"
                               class="form-control phone-mask"
                               placeholder="Ana görsel url giriniz..."
                               asp-for="Image"
                               aria-label="658 799 8941"
                               aria-describedby="basic-default-phone" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-message">Seyahat Hakkında</label>
                    <div class="col-sm-10">
                        <textarea id="basic-default-message"
                                  class="form-control"
                                  placeholder="Varsa eklemek istedikleriniz..."
                                  aria-label="Varsa eklemek istedikleriniz..."
                                  aria-describedby="basic-icon-default-message2"></textarea>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary" onclick="alert('Yeni tur rotası başarılı bir şekilde oluşturuldu')">Yeni Rota Oluştur</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


