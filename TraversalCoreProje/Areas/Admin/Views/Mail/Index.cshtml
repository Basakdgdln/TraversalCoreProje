@model TraversalCoreProje.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0"></h5>
            <small class="text-muted float-end"></small>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name"> Alıcı mail adresi </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="ReceiverMail" id="basic-default-name" placeholder="Alıcı mail adresi..." />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-company"> Konu</label>
                    <div class="col-sm-10">
                        <input type="text"
                               class="form-control"
                               asp-for="Subject"
                               id="basic-default-company"
                               placeholder="Konu başlığı..." />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-message">Mesaj içeriği</label>
                    <div class="col-sm-10">
                        <textarea id="basic-default-message"
                                  class="form-control"
                                  asp-for="Body"
                                  placeholder="Mesaj içeriği..."
                                  aria-label="Mesaj içeriği..."
                                  aria-describedby="basic-icon-default-message2"></textarea>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary" style="float:right; height:50px; width:250px"> Mail Gönder</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


