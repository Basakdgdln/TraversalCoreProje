@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    img {
        border-radius: 50%
    }
</style>


<div class="card">
    <h5 class="card-header">Traversal Kullanıcı Listesi  </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <tr>
                <th>Kullanıcı</th>
                <th>Ad Soyad</th>
                <th>Kullanıcı Adı</th>
                <th>Mail Adresi</th>
                <th>Sil</th>
                <th>Yorumlar</th>
                <th>Seyahat Geçmişi</th>
                <th>Rol Ata</th>
            </tr>
            <tbody class="table-border-bottom-0">
                @foreach (var x in Model)
                {
                <tr>
                    <td><img src="@x.ImageUrl" height="50" width="50" /></td>
                    <td>@x.Name @x.Surname </td>
                    <td>@x.UserName </td>
                    <td>@x.Email</td>
                    <td><a href="/Admin/User/DeleteUser/@x.Id" class="btn btn-outline-danger" onclick="return confirm('Gerçekten silmek istediğinize emin misiniz?')"> Sil</a> </td>
                    <td><a href="/Admin/Comment/Index" class="btn btn-outline-primary"> Yorumlar</a></td>
                    <td>
                        <a href="/Admin/User/ReservationUser/@x.Id" class="btn btn-outline-success">Seyahat Geçmişi</a>
                    </td>
                    <td>
                        <a href="/Admin/Role/AssignRole/@x.Id" class="btn btn-outline-warning">Rol Ata</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Logi/SignUp/" class="btn btn-secondary" style="height:40px; width:250px; "><i class="bx bx-user-plus"></i>Yeni Kullanıcı Kaydı</a>





