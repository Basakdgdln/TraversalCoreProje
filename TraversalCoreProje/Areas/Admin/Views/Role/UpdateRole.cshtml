@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0"></h5>
            <small class="text-muted float-end"></small>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="RoleID" />
            <form method="post">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name"> Rol Adını giriniz </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="RoleName" id="basic-default-name" placeholder="Rol adı..." />
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary" style="float:right; height:50px; width:250px"> Değişiklikleri Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

