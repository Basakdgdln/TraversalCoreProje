@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


@if (Model.Count > 0)
{
    <div class="card">
        <h5 class="card-header">Rol Listesi</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <tr>
                    <th></th>
                    <th>Rol</th>
                    <th>Rolü Sil</th>
                    <th>Rolü Düzenle</th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td><i class="bx bxs-right-arrow-alt"></i></td>
                <td><span class="badge bg-label-primary">@item.Name</span></td> 
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Rolü Sil</a> </td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Rolü Düzenle</a> </td>
            </tr>
                }
            </table>
        </div>
    </div>
}

else
{
    <div class="alert alert-danger">
        <span>Herhangi bir rol bulunamadı</span>
    </div>
}

<br />
<a href="/Admin/Role/CreateRole" class="btn btn-primary" style="height:40px; width:250px;">Yeni Rol Girişi</a>





