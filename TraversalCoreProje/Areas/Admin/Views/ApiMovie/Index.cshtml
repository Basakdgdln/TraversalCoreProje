@model List<ApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Top 100 Film Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Film Adı</th>
                <th>IMDB Puanı</th>
                <th>Yapım Yılı</th>
                <th>Fragman</th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>@item.rank</td>
            <td>@item.title</td>
            <td>@item.rating</td>
            <td>@item.year</td>
            <td><a href="#" class="btn btn-outline-dark">Fragman</a></td>
        </tr>
            }
        </table>
    </div>
</div>

