@using EntityLayer.Concrete
@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Gelen Mesaj Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <tr>
                <th></th>
                <th>Gönderen</th>
                <th>Konu</th>
                <th>Tarih</th>
                <th>Sil</th>
                <th>Mesajı Aç</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td><i class="bx bx-message-alt-detail"></i></td>
                    <td>@item.Name</td>
                    <td>@item.Subject</td>
                    <td><span class="badge bg-label-primary me-10">@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</span></td>
                    <td><a href="/Admin/ContactUs/DeleteContactUs/@item.ContactUsID" class="btn btn-outline-danger">Sil</a> </td>
                    <td><a href="/Admin/ContactUs/OpenMessage/@item.ContactUsID" class="btn btn-outline-success">Mesajı Aç</a> </td>
                </tr>
            }
        </table>
    </div>
</div>
<br />




